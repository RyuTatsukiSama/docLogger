{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${input:pickProgram}",
      "cwd": "${workspaceFolder}",
      "console": "externalTerminal",
      "preLaunchTask": "CMake: build"
    }
  ],
  "inputs": [
    {
      "id": "pickProgram",
      "type": "pickString",
      "description": "Choisis l’exécutable à lancer",
      "options": [
        "${workspaceFolder}/build/Debug/rViewerLog.exe",
        "${workspaceFolder}/build/Debug/TaskManagerApp.exe",
        "${workspaceFolder}/build/Debug/UnitTests.exe"
      ]
    }
  ]
}
