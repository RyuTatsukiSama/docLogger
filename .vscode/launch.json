{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/Debug/${input:pickProgram}.exe",
      "cwd": "${workspaceFolder}",
      "console": "externalTerminal",
      "preLaunchTask": "CMake: build"
    }
  ],
  "inputs": [
    {
      "id": "pickProgram",
      "type": "pickString",
      "description": "Choisis l’exécutable à lancer",
      "options": [
        "rViewerLog",
        "TaskManagerApp",
        "TaskManagerAppDll",
        "UnitTests"
      ]
    }
  ]
}
